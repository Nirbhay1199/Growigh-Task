<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/pfp_img"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:background="@drawable/img_1"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Meta explains how AI influences what we see on Facebook and Instagram"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/imageFeed"
            tools:src="@drawable/img_2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="View all 9 Comments"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="21 Likes"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="#777373"
            app:drawableStartCompat="@drawable/like_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9 Comments"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="#777373"
            app:drawableStartCompat="@drawable/comment_icon" />

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Share"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textColor="#777373"
            app:drawableStartCompat="@drawable/share_icon" />

    </LinearLayout>


</LinearLayout>